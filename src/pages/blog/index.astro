---
import LayoutBlog from "../../layouts/LayoutBlog.astro";

const posts = [
    {
        title: "Robótica y Tecnología",
        excerpt:
            "Programa de Robótica Escolar: Un paso hacia el futuro. Descubre cómo nuestros estudiantes desarrollan habilidades en ciencia y tecnología.",
        image: "/logos/robotica.webp",
        url: "/blog/robotica-tecnologia",
        category: "Robótica y Tecnología",
        date: "20 Abr, 2024",
    },
];
---

<LayoutBlog
    title="Blog"
    subtitle="C.E.B.G Manuel Urbano Ayarza"
    heroImage="/logos/blob-hero.png"
>
    <div class="text-left mb-12">
        <h2 class="text-3xl md:text-5xl font-bold text-primary mb-4">
            Bienvenidos a nuestro Blog
        </h2>
        <p class="text-gray-600">
            Descubre las últimas noticias, eventos y logros de nuestra escuela.
        </p>
    </div>

    <!-- Categories / Search (Mockup based on image) -->
    <div class="flex flex-col md:flex-row justify-between items-start gap-8">
        <!-- Main Content (Articles Grid) -->
        <div class="flex-1 w-full grid grid-cols-1 gap-8 bg-white p-2">
            {
                posts.map((post) => (
                    <a
                        href={post.url}
                        class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 flex flex-col md:flex-row h-full"
                    >
                        <div class="w-full md:w-2/5 h-64 md:h-auto overflow-hidden">
                            <img
                                src={post.image}
                                alt={post.title}
                                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                            />
                        </div>
                        <div class="p-6 md:p-8 flex flex-col justify-between w-full md:w-3/5">
                            <div>
                                <span class="inline-block bg-blue-100 text-blue-700 rounded-full px-3 py-1 text-sm font-semibold mb-3">
                                    {post.category}
                                </span>
                                <h3 class="text-2xl font-bold text-gray-800 mb-2 group-hover:text-blue-600 transition-colors">
                                    {post.title}
                                </h3>
                                <p class="text-gray-600 mb-4">{post.excerpt}</p>
                            </div>
                            <div class="flex items-center justify-between mt-4">
                                <span class="text-gray-400 text-sm">
                                    {post.date}
                                </span>
                                <span class="text-blue-600 font-semibold group-hover:underline">
                                    Leer más →
                                </span>
                            </div>
                        </div>
                    </a>
                ))
            }
        </div>

        <!-- Sidebar -->
        <aside class="w-full md:w-80 flex flex-col gap-6">
            <!-- Categories Widget -->
            <div class="bg-white shadow-sm rounded-b-xl">
                <h3
                    class="font-bold text-2xl text-white bg-primary rounded-t-xl mb-4 p-4"
                >
                    Categorías
                </h3>
                <div class="p-4">
                    <ul class="space-y-2">
                        <li>
                            <a
                                href="#"
                                class="block px-4 py-2 bg-secondary text-primary font-bold rounded-full text-lg"
                                >Todos</a
                            >
                        </li>
                        <li>
                            <a
                                href="#"
                                class="block px-4 py-2 bg-primary/25 text-primary font-bold rounded-full text-lg transition-colors"
                                >Robótica y Tecnología</a
                            >
                        </li>
                        <li>
                            <a
                                href="#"
                                class="block px-4 py-2 bg-primary/25 text-primary font-bold rounded-full text-lg transition-colors"
                                >Eventos Escolares</a
                            >
                        </li>
                        <li>
                            <a
                                href="#"
                                class="block px-4 py-2 bg-primary/25 text-primary font-bold rounded-full text-lg transition-colors"
                                >Vida Estudiantil</a
                            >
                        </li>
                    </ul>
                </div>
            </div>

            <div class="bg-white shadow-sm rounded-b-xl">
                <!-- Quick Links -->
                <h3
                    class="font-bold text-2xl text-white bg-primary rounded-t-xl mb-4 p-4"
                >
                    Enlaces Rápidos
                </h3>
                <div class="p-4">
                    <ul class="space-y-2">
                        <li>
                            <a
                                href="#"
                                class="text-primary text-lg transition-colors"
                                >› Acerca de</a
                            >
                        </li>
                        <li>
                            <a
                                href="#"
                                class="text-primary text-lg transition-colors"
                                >› Oferta Académica</a
                            >
                        </li>
                        <li>
                            <a
                                href="#"
                                class="text-primary text-lg transition-colors"
                                >› Contáctanos</a
                            >
                        </li>
                    </ul>
                </div>
            </div>
        </aside>
    </div>
</LayoutBlog>
