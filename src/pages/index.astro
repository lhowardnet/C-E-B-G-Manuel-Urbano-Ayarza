---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import Box from "../components/Box.astro";
import BoxTitle from "../components/BoxTitle.astro";
import InstagramCarousel from "../components/InstagramCarousel";
import { Icon } from "astro-icon/components";
---

<BaseLayout
  title="Inicio"
  description="Centro basico general Manuel Urbano Ayarza, escuela e institución educativa pública con 350 estudiantes y 25 docentes comprometidos con educación de calidad en Cativa, Colón, Panamá desde 1918."
>
  <section>
    <Hero />
    <article
      class="min-h-[100dvh] animate-fade-in animate-fill-mode-forwards timeline-view animate-range-[0%_50%]"
    >
      <BoxTitle
        className="bg-primary p-4 sticky top-0 z-1 rounded-none border-none"
        title="Matrícula Actual"
      >
        <Icon name="lucide:graduation-cap" class="w-6 h-6" slot="icon" />
      </BoxTitle>

      <div class="grid grid-cols-1 gap-3 py-4 md:py-8 lg:grid-cols-2">
        <div class="order-2">
          <div class="flex flex-col gap-2 w-full">
            <Box
              className="p-4 md:p-8 w-48 text-center w-full flex flex-row justify-evenly gap-4"
            >
              <div class="flex flex-col gap-4 p-4">
                <div class="flex flex-row justify-center gap-4">
                  <Icon name="lucide:user" class="w-10 h-auto" />
                  <p class="text-5xl font-bold text-white">350</p>
                </div>
                <p class="text-secondary text-1xl">Estudiantes</p>
              </div>
            </Box>

            <Box
              className="p-4 md:p-8 w-48 text-center w-full flex flex-row justify-evenly gap-4"
            >
              <div class="flex flex-col gap-4 p-4">
                <div class="flex flex-row justify-center gap-4">
                  <Icon name="lucide:users-round" class="w-10 h-auto" />
                  <p class="text-5xl font-bold text-white">25</p>
                </div>
                <p class="text-secondary text-1xl">Docentes</p>
              </div>
            </Box>
          </div>
        </div>
        <div class="flex order-1">
          <img
            src="/logos/estudiante.webp"
            loading="lazy"
            class="mask-b-from-5% mask-b-to-95% w-full h-auto"
            alt="Institución educativa Manuel Urbano Ayarza - Colón, Panamá"
          />
        </div>
      </div>
    </article>

    <article 
    class="min-h-[100dvh] animate-fade-in animate-fill-mode-forwards timeline-view animate-range-[0%_50%]"> 
      <BoxTitle
        className="bg-primary p-4 sticky top-0 z-1 mb-2 rounded-none border-none"
        title="Actividades"
      >
        <Icon name="lucide:graduation-cap" class="w-6 h-6" slot="icon" />
      </BoxTitle>

      <div class="flex items-center h-[100dvh]">
        <InstagramCarousel client:load />
      </div>
    </article>
  </section>
</BaseLayout>
