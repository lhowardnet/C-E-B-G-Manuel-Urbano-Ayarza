---
import BaseLayout from "./BaseLayout.astro";
import HeroBlog from "../components/HeroBlog.astro";

interface Props {
    title: string;
    subtitle?: string;
    heroImage?: string;
    description?: string;
}

const { title, subtitle, heroImage, description } = Astro.props;
---

<BaseLayout title={title} description={description} widthFull>
    <HeroBlog title={title} subtitle={subtitle} image={heroImage} />

    <div class="relative z-10 bg-gray-100 min-h-screen pb-20 px-4">
        <div
            class="absolute inset-0 overflow-hidden pointer-events-none h-[161px] translate-y-[-160px]"
        >
            <!-- Subtle wave pattern -->
            <svg
                class="absolute bottom-0 left-0 w-full h-32 lg:h-48"
                viewBox="0 0 1440 120"
                fill="none"
                xmlns="http://www.w3.org/2000/svg"
                preserveAspectRatio="none"
            >
                <path
                    d="
      M0 60
      C120 20, 300 10, 420 40
      C560 75, 720 90, 880 75
      C1040 60, 1200 30, 1320 20
      L1440 10
      L1440 120
      L0 120
      Z
    "
                    fill="#F3F4F6"></path>
            </svg>
        </div>
        <div class="max-w-6xl mx-auto">
            <slot />
        </div>
    </div>
</BaseLayout>
